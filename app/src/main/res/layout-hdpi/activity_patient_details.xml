<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard.PatientDetails">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#813D7E"
        android:clickable="false"
        android:freezesText="true"
        android:includeFontPadding="false"
        android:textColor="#EDEDF0" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@mipmap/karnatakalogo" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="Karnataka Mental Health Management System "
        android:textColor="#EEEBF0"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:text="Patient's Details"
                android:textColor="#9C27B0"
                android:textSize="25dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Name: Prashant singh"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="MHMSID: KA-01-2019-000040"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:text="Father/Mother's Name: Mukesh Chand"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="120dp"
                    android:text="Age: 22"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="160dp"
                    android:text="Gender: Male"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="200dp"
                    android:text="Phone Number: 9457182128"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="Advance Directive:" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="280dp"
                    android:text="Email: abc@gmail.com"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/OpBmr"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:text="OP-BMR"
                    android:textColor="#F4F3F7"
                    android:textColorLink="#FCFAFA"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/assessementopbmr"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:text="Assessement"
                    android:textColor="#FCFAFA"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/TherapyIpbmr"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:text="Therapy"
                    android:textColor="#FCFAFA"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRestraintIp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:text="Restraint Monitering"
                    android:textColor="#F7F5F5"
                    android:textStyle="bold" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</RelativeLayout>
